<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BarangActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Data Barang"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kode Barang"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtnim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Barang"
        android:textSize="15dp"
        android:textColorHint="#000000"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtnama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nama Barang"
        android:textSize="15dp"
        android:textColorHint="#000000"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Barang"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtjk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Jenis Barang"
        android:textSize="15dp"
        android:textColorHint="#000000"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banyak Barang"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtalamat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Banyak Barang"
        android:textSize="15dp"
        android:textColorHint="#000000"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga Barang"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Harga Barang"
        android:id="@+id/edtemail"
        android:textSize="15dp"
        android:textColorHint="#000000"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_weight="0.20"
            android:id="@+id/btnsimpan"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIMPAN"/>

        <Button
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_weight="0.20"
            android:id="@+id/btntampil"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAMPIL"/>

        <Button
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_weight="0.20"
            android:id="@+id/btnedit"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"/>



        <Button
            android:layout_marginRight="5dp"
            android:layout_weight="0.20"
            android:padding="10dp"
            android:id="@+id/btnhapus"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPUS"/>

    </LinearLayout>

</LinearLayout>